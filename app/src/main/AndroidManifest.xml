<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_delivery_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_delivery_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pedidapp"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity
            android:name=".activities.delivery.home.DeliveryHomeActivity"
            android:exported="false" />
        <activity
            android:name=".activities.restaurant.home.RestaurantHomeActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SelectRolesActivity"
            android:exported="false" />
        <activity
            android:name=".activities.client.home.ClientHomeActivity"
            android:exported="false" />
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:exported="true" />
    </application>

</manifest>